@{
    Layout = "~/_Layout.cshtml";
    Page.Title = "Exercise01: Basic form Processing";
    var customerName = Request.Form["CustomerName"];
    //var mealSteak = Request.Form["MealSteak"];
    //var mealSeafood = Request.Form["MealSeafood"];
    //var mealVegetables = Request.Form["MealVegetables"];
    var choice = Request.Form["MealGroup"];
}
@section head{
    <link href="~/Content/myStyleSheet.css" rel="stylesheet" />}
@section banner{
    <span style="font-size:xx-large"><strong>@Page.Title</strong></span>}
<div>
    @if (IsPost) {
        if (choice.IsEmpty())
        {
            <p><span style="color:firebrick">Make at least one selection from the platforms.</span> </p>
        }
        else {
            char[] delimiter = { ',' };
            <p>
                <ul>
                    @foreach (var platform in choice.Split(delimiter))
                    {
                        <li>@platform</li>
                    }
                </ul>
            </p>
        }
    }
    <form id="EX01" action="" method="post">
        <div class="row">
            <div class="col-md-3">
                <p>Customer Name</p>
                <input type="text" name="CustomerName" value="@customerName" />
            </div>
            <div class="col-md-9">
                <label id="labelChooseMeal">Choose your meal items</label><br />
                <input type="checkbox" name="MealGroup" value="Steak" />Steak<br />
                <input type="checkbox" name="MealGroup" value="Seafood" />Seafood<br />
                <input type="checkbox" name="MealGroup" value="Vegetables" />Vegetables<br />
            </div>
        </div>
        <div class="row">
            <input class="btn btn-primary" type="submit" name="Submit" value="submit" />
            <input class="btn" type="submit" name="Reset" value="reset" />
        </div>
    </form>
</div>
@section footer{
    <p>&copy CPSC1517, Nait Today's date is @DateTime.Today.ToLongDateString().</p> }


